{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noEmitOnError": true
  },
  "exclude": ["node_modules", "__tests__", "dist"]
}
